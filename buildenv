#
# Set up environment variables for general build tool to operate
#
export ZOPEN_TYPE="GIT"

export ZOPEN_GIT_URL="https://github.com/madler/zlib.git"
export ZOPEN_GIT_DEPS="git make zoslib"
export ZOPEN_GIT_TAG="v1.2.13"
export ZOPEN_CONFIGURE_MINIMAL=Y     
export ZOPEN_EXTRA_CONFIGURE_OPTS="--static"
export ZOPEN_MAKE_OPTS='libz.a'
export ZOPEN_COMP=CLANG

zopen_check_results()
{
  dir="$1"
  pfx="$2"
  chk="$1/$2_check.log"
  totalTests=$(egrep "\*\*\* zlib " $chk | wc -l)
  passed=$(egrep "test OK" $chk | wc -l) 
  failures=$((totalTests-passed))

# Echo the following information to guage build health
cat <<TEST
actualFailures:$failures
totalTests:$totalTests
expectedFailures:0
TEST
}
